    // "noUnusedLocals": true,
    // "noUnusedParameters": true,
    // "noImplicitAny": false,
    // "noImplicitThis": false,
    // "strictNullChecks": false
    // "declaration": true
    "lib": [
      "es2017",
      "dom"
