{
  "name": "ecblog-server",
  "version": "0.1.0",
  "description": "The blog server build on Node.js, GraphQL, Koa2.",
  "main": "index.js",
  "scripts": {
    "build": "npm run build.ts",
    "build.doc": "graphdoc -e http://localhost:4001/graphql -o ./doc/schema",
    "build.ts": "tsc",
    "clean": "rm -rf dist && mkdir dist",
    "lint": "tslint index.ts ./src/** ./test/**",
    "serve": "nodemon dist/src/index.js",
    "serve.debug": "nodemon --inspect dist/src/index.js",
    "start": "npm run watch",
    "test": "echo \"Error: no test specified\" && exit 1",
    "watch": "concurrently \"redis-server\" \"npm run watch-ts\" \"npm run serve\"",
    "watch-debug": "concurrently \"redis-server\" \"npm run watch-ts\"",
    "watch-ts": "tsc -w"
  },
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@koa/cors": "^2.2.1",
    "ava": "^0.25.0",
    "babel-polyfill": "^6.26.0",
    "bcrypt": "^2.0.1",
    "bluebird": "^3.5.1",
    "concurrently": "^3.6.0",
    "core-js": "^2.5.7",
    "graphql": "^0.13.2",
    "ioredis": "^3.2.2",
    "jsonwebtoken": "^8.3.0",
    "koa": "^2.5.1",
    "koa-bodyparser": "^4.2.1",
    "koa-compose": "^4.1.0",
    "koa-compress": "^3.0.0",
    "koa-cors": "0.0.16",
    "koa-graphql": "^0.7.5",
    "koa-helmet": "^4.0.0",
    "koa-logger": "^3.2.0",
    "koa-passport": "^4.1.0",
    "koa-redis": "^3.1.2",
    "koa-router": "^7.4.0",
    "koa-session": "^5.8.1",
    "koa-static": "^5.0.0",
    "koa-views": "^6.1.4",
    "lodash": "^4.17.10",
    "mongoose": "^5.1.7",
    "node-fetch": "^2.1.2",
    "passport-github": "^1.1.0",
    "passport-google-oauth": "^1.0.0",
    "passport-jwt": "^4.0.0",
    "passport-local": "^1.0.0",
    "uuid": "^3.3.0",
    "winston": "^3.0.0"
  },
  "devDependencies": {
    "@2fd/graphdoc": "^2.4.0",
    "@types/graphql": "^0.13.1",
    "@types/koa": "^2.0.46",
    "@types/mongoose": "^5.0.18",
    "nodemon": "^1.17.5",
    "ts-node": "^7.0.0",
    "tslint": "^5.10.0",
    "tslint-config-standard": "^7.1.0",
    "typescript": "^2.9.2"
  }
}
