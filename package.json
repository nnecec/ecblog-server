{
  "name": "ecblog-server",
  "version": "0.1.0",
  "description": "The blog server build on Node.js, GraphQL, Koa2.",
  "main": "index.js",
  "scripts": {
    "build": "npm run build.ts",
    "build.doc": "graphdoc -e http://localhost:4001/graphql -o ./doc/schema",
    "build.ts": "tsc",
    "clean": "rm -rf dist && mkdir dist",
    "lint": "tslint index.ts ./src/** ./test/**",
    "serve": "nodemon dist/src",
    "serve-debug": "nodemon --inspect=9229 dist/src",
    "start": "npm run watch",
    "test": "echo \"Error: no test specified\" && exit 1",
    "watch": "concurrently \"redis-server\" \"npm run watch-ts\" \"npm run serve\"",
    "watch-debug": "concurrently \"redis-server\" \"npm run watch-ts\" \"npm run serve-debug\"",
    "watch-ts": "tsc -w"
  },
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@koa/cors": "^2.2.2",
    "ava": "^0.25.0",
    "babel-polyfill": "^6.26.0",
    "bcrypt": "^3.0.2",
    "bluebird": "^3.5.3",
    "concurrently": "^4.1.0",
    "core-js": "^2.5.7",
    "graphql": "^14.0.2",
    "ioredis": "^4.2.0",
    "jsonwebtoken": "^8.4.0",
    "koa": "^2.6.2",
    "koa-bodyparser": "^4.2.1",
    "koa-compose": "^4.1.0",
    "koa-compress": "^3.0.0",
    "koa-cors": "0.0.16",
    "koa-graphql": "^0.8.0",
    "koa-helmet": "^4.0.0",
    "koa-logger": "^3.2.0",
    "koa-passport": "^4.1.1",
    "koa-redis": "^3.1.3",
    "koa-router": "^7.4.0",
    "koa-session": "^5.10.0",
    "koa-static": "^5.0.0",
    "koa-views": "^6.1.4",
    "lodash": "^4.17.11",
    "mongoose": "^5.3.12",
    "node-fetch": "^2.3.0",
    "passport-github": "^1.1.0",
    "passport-google-oauth": "^1.0.0",
    "passport-jwt": "^4.0.0",
    "passport-local": "^1.0.0",
    "uuid": "^3.3.2",
    "winston": "^3.1.0"
  },
  "devDependencies": {
    "@2fd/graphdoc": "^2.4.0",
    "@types/graphql": "^14.0.3",
    "@types/koa": "^2.0.46",
    "@types/mongoose": "^5.3.1",
    "nodemon": "^1.18.6",
    "ts-node": "^7.0.0",
    "tslint": "^5.11.0",
    "tslint-config-standard": "^8.0.1",
    "typescript": "^3.1.6"
  }
}
