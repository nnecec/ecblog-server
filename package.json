{
  "name": "koa-graph-server",
  "version": "0.1.0",
  "description": "Server build on NodeJs, GraphQL, Koa.",
  "main": "index.js",
  "scripts": {
    "build": "npm run build.ts",
    "build.doc": "graphdoc -e http://localhost:4001/graphql -o ./doc/schema",
    "build.ts": "tsc",
    "clean": "rm -rf dist && mkdir dist",
    "debug": "npm run watch.debug",
    "lint": "tslint index.ts ./src/** ./test/**",
    "serve": "nodemon dist/src/index.js",
    "serve.debug": "nodemon --inspect dist/src/index.js",
    "start": "npm run watch",
    "test": "echo \"Error: no test specified\" && exit 1",
    "watch": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"yellow.bold,cyan.bold,green.bold\" \"redis-server\" \"npm run watch.ts\" \"npm run serve\"",
    "watch.debug": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"yellow.bold,cyan.bold,green.bold\" \"npm run watch.ts\" \"npm run serve.debug\"",
    "watch.ts": "tsc -w"
  },
  "author": "",
  "license": "MIT",
  "dependencies": {
    "ava": "^0.25.0",
    "babel-polyfill": "^6.26.0",
    "bcrypt": "^2.0.1",
    "bluebird": "^3.5.1",
    "concurrently": "^3.5.1",
    "core-js": "^2.5.5",
    "graphql": "^0.13.2",
    "ioredis": "^3.2.2",
    "jsonwebtoken": "^8.2.1",
    "koa": "^2.5.1",
    "koa-bodyparser": "^4.2.0",
    "koa-compose": "^4.0.0",
    "koa-compress": "^3.0.0",
    "koa-convert": "^1.2.0",
    "koa-cors": "0.0.16",
    "koa-graphql": "^0.7.5",
    "koa-helmet": "^4.0.0",
    "koa-logger": "^3.2.0",
    "koa-passport": "^4.0.1",
    "koa-redis": "^3.1.2",
    "koa-router": "^7.4.0",
    "koa-session": "^5.8.1",
    "koa-static": "^4.0.2",
    "koa-views": "^6.1.4",
    "lodash": "^4.17.10",
    "mongoose": "^5.0.17",
    "node-fetch": "^2.1.2",
    "passport-jwt": "^4.0.0",
    "passport-local": "^1.0.0",
    "uuid": "^3.2.1",
    "winston": "^2.4.2"
  },
  "devDependencies": {
    "@2fd/graphdoc": "^2.4.0",
    "@types/graphql": "^0.13.0",
    "@types/koa": "^2.0.45",
    "@types/mongoose": "^5.0.12",
    "@types/node": "^10.0.4",
    "import-dir": "0.0.1",
    "nodemon": "^1.17.4",
    "ts-node": "^6.0.3",
    "tslint": "^5.10.0",
    "tslint-config-standard": "^7.0.0",
    "typescript": "^2.8.3"
  }
}
