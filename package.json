{
  "name": "ecblog-server",
  "version": "0.1.0",
  "description": "The blog server build on Node.js, GraphQL, Koa2.",
  "main": "index.js",
  "scripts": {
    "build": "npm run build",
    "build.doc": "graphdoc -e http://localhost:4001/graphql -o ./doc/schema",
    "clean": "rm -rf dist && mkdir dist",
    "serve": "ts-node src/index.ts",
    "start": "npm run watch-ts",
    "watch-ts": "nodemon -e ts -w ./src -x npm run serve"
  },
