{
  "name": "koa-graph-server",
  "version": "0.1.0",
  "description": "Server build on NodeJs, GraphQL, Koa.",
  "main": "index.js",
  "scripts": {
    "build": "npm run build.ts",
    "build.doc": "graphdoc -e http://localhost:4001/graphql -o ./doc/schema",
    "build.ts": "tsc",
    "clean": "rm -rf dist && mkdir dist",
    "debug": "npm run watch.debug",
    "lint": "tslint index.ts ./src/** ./test/**",
    "serve": "nodemon dist/src/index.js",
    "serve.debug": "nodemon --inspect dist/src/index.js",
    "start": "npm run watch",
    "test": "echo \"Error: no test specified\" && exit 1",
    "watch": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"yellow.bold,cyan.bold,green.bold\" \"npm run watch.ts\" \"npm run serve\"",
    "watch.debug": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"yellow.bold,cyan.bold,green.bold\" \"npm run watch.ts\" \"npm run serve.debug\"",
    "watch.ts": "tsc -w"
  },
  "author": "",
  "license": "MIT",
  "dependencies": {
    "ava": "^0.22.0",
    "babel-polyfill": "^6.26.0",
    "bluebird": "^3.5.0",
    "concurrently": "^3.5.0",
    "core-js": "^2.5.1",
    "graphql": "^0.11.2",
    "ioredis": "^3.1.4",
    "jsonwebtoken": "^8.0.1",
    "koa": "^2.3.0",
    "koa-bodyparser": "^4.2.0",
    "koa-compose": "^4.0.0",
    "koa-compress": "^2.0.0",
    "koa-convert": "^1.2.0",
    "koa-cors": "0.0.16",
    "koa-graphql": "^0.7.3",
    "koa-helmet": "^3.2.0",
    "koa-logger": "^3.0.1",
    "koa-passport": "^4.0.0",
    "koa-redis": "^3.1.1",
    "koa-router": "^7.2.1",
    "koa-session": "^5.5.0",
    "koa-static": "^4.0.1",
    "koa-views": "^6.0.2",
    "lodash": "^4.17.4",
    "mongoose": "^4.11.11",
    "node-fetch": "^1.7.3",
    "passport-jwt": "^3.0.0",
    "passport-local": "^1.0.0",
    "require-dir": "^0.3.2",
    "winston": "^2.3.1"
  },
  "devDependencies": {
    "@2fd/graphdoc": "^2.4.0",
    "@types/graphql": "^0.11.3",
    "@types/koa": "^2.0.39",
    "@types/mongoose": "^4.7.21",
    "@types/node": "^8.0.28",
    "nodemon": "^1.11.0",
    "ts-node": "^3.3.0",
    "tslint": "^5.7.0",
    "tslint-config-standard": "^6.0.1",
    "typescript": "^2.5.2"
  }
}
