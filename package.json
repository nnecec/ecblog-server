    "core-js": "^3.1.3",
    "graphql": "^14.3.1",
    "ioredis": "^4.10.0",
    "jsonwebtoken": "^8.5.1",
    "koa": "^2.7.0",
    "koa-bodyparser": "^4.2.1",
    "koa-compose": "^4.1.0",
    "koa-compress": "^3.0.0",
    "koa-cors": "0.0.16",
    "koa-graphql": "^0.8.0",
    "koa-helmet": "^4.2.0",
    "koa-logger": "^3.2.0",
    "koa-passport": "^4.1.3",
