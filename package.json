{
  "name": "koa-graph-server",
  "version": "0.1.0",
  "description": "Server build on NodeJs, GraphQL, Koa.",
  "main": "index.js",
  "scripts": {
    "build": "npm run build.ts",
    "build.doc": "graphdoc -e http://localhost:4001/graphql -o ./doc/schema",
    "build.ts": "tsc",
    "clean": "rm -rf dist && mkdir dist",
    "debug": "npm run watch.debug",
    "lint": "tslint index.ts ./src/** ./test/**",
    "serve": "nodemon dist/src/index.js",
    "serve.debug": "nodemon --inspect dist/src/index.js",
    "start": "npm run watch",
    "test": "echo \"Error: no test specified\" && exit 1",
    "watch": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"yellow.bold,cyan.bold,green.bold\" \"npm run watch.ts\" \"npm run serve\"",
    "watch.debug": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"yellow.bold,cyan.bold,green.bold\" \"npm run watch.ts\" \"npm run serve.debug\"",
    "watch.ts": "tsc -w"
  },
  "author": "",
  "license": "MIT",
  "dependencies": {
    "ava": "^0.24.0",
    "babel-polyfill": "^6.26.0",
    "bcrypt": "^1.0.3",
    "bluebird": "^3.5.1",
    "concurrently": "^3.5.1",
    "core-js": "^2.5.3",
    "graphql": "^0.12.3",
    "ioredis": "^3.2.2",
    "jsonwebtoken": "^8.1.0",
    "koa": "^2.4.1",
    "koa-bodyparser": "^4.2.0",
    "koa-compose": "^4.0.0",
    "koa-compress": "^2.0.0",
    "koa-convert": "^1.2.0",
    "koa-cors": "0.0.16",
    "koa-graphql": "^0.7.3",
    "koa-helmet": "^3.3.0",
    "koa-logger": "^3.1.0",
    "koa-passport": "^4.0.1",
    "koa-redis": "^3.1.1",
    "koa-router": "^7.3.0",
    "koa-session": "^5.7.1",
    "koa-static": "^4.0.2",
    "koa-views": "^6.1.3",
    "lodash": "^4.17.4",
    "mongoose": "^4.13.9",
    "node-fetch": "^1.7.3",
    "passport-jwt": "^3.0.1",
    "passport-local": "^1.0.0",
    "uuid": "^3.1.0",
    "winston": "^2.4.0"
  },
  "devDependencies": {
    "@2fd/graphdoc": "^2.4.0",
    "@types/graphql": "^0.11.8",
    "@types/koa": "^2.0.43",
    "@types/mongoose": "^4.7.32",
    "@types/node": "^9.3.0",
    "import-dir": "0.0.1",
    "nodemon": "^1.14.11",
    "ts-node": "^4.1.0",
    "tslint": "^5.9.1",
    "tslint-config-standard": "^7.0.0",
    "typescript": "^2.6.2"
  }
}
